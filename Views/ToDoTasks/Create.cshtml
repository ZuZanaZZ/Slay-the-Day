@model ToDo.Models.ToDoTask

@{
    ViewData["Title"] = "Create";
}

<h1>Create a task</h1>
<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label mt-4">
                    <input class="form-check-input" asp-for="Done" /> @Html.DisplayNameFor(model => model.Done)
                </label>
            </div>
            <div class="form-group mt-2">
                <label asp-for="task" class="control-label"></label>
                <input asp-for="task" class="form-control" />
                <span asp-validation-for="task" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div >
    <a asp-action="MyTasks">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
