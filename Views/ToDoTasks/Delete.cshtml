@model ToDo.Models.ToDoTask

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Are you sure you want to delete this task?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Done)
        </dt>
        <dd class="col-sm-10 checkmark-disabled">
            @Html.DisplayFor(model => model.Done)
            <label for="done"></label>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.task)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.task)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary custom-link" asp-action="MyTasks">Back to List</a>
    </form>
</div>
