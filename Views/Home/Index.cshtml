@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-2 fw-bold mt-5">Slay the Day</h1>
    <p>Welcome to the Slay the Day! A simple to do application to keep track of your tasks.</p>

    <div class="container row mt-5 gap-2">
        <button class="col btn btn-lg btn-primary custom-btn" type="button"
                onclick="location.href='@Url.Action("Create", "ToDoTasks")'">Add Task</button>
        <button class="col btn btn-lg btn-primary custom-btn" type="button"
                onclick="location.href='@Url.Action("MyTasks", "ToDoTasks")'">My Tasks</button>
        <button class="col btn btn-lg btn-primary custom-btn" type="button"
                onclick="location.href='@Url.Action("SearchForm", "ToDoTasks")'">Search</button>
    </div>
</div>
